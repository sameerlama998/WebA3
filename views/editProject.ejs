<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body tabindex="-1">

    <div class="navbar bg-base-100">
        <div class="flex-1">
            <a class="btn btn-ghost normal-case text-xl" href="/">Climate Solutions</a>
        </div>

        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost sm:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </label>
            <ul tabindex="0" class="menu menu-sm dropdown-content right-0 mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                <li><a href="/solutions/projects">View Projects</a></li>
                <li><a href="/solutions/addProject">Add Project</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </div>

        <div class="navbar-center hidden sm:flex">
            <ul class="menu menu-horizontal px-1">
                <li><a href="/solutions/projects">View Projects</a></li>
                <li><a href="/solutions/addProject">Add Project</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </div>
    </div>

    <div class="container mx-auto p-4">

        <div class="hero bg-base-200 rounded-lg p-6">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Edit Project</h1>
                    <p class="py-6"><%= project.title %></p>
                </div>
            </div>
        </div>

        <br>

        <form action="/solutions/editProject" method="post">

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">

                <div class="mb-6">
                    <label for="title" class="block font-medium my-2">Title</label>
                    <input value="<%= project.title %>" type="text" id="title" name="title" required class="w-full rounded-md px-3 py-2">
                </div>
                
                <div class="mb-6">
                    <label for="feature_img_url" class="block font-medium my-2">Feature Image (URL)</label>
                    <input value="<%= project.feature_img_url %>" type="url" id="feature_img_url" name="feature_img_url" required class="w-full rounded-md px-3 py-2">
                </div>

                <div class="mb-6">
                    <label for="sector_id" class="block font-medium my-2">Sector</label>
                    <select id="sector_id" name="sector_id" required class="w-full rounded-md px-3 py-2">
                        <% sectors.forEach(function(sector) { %>
                            <option value="<%= sector.id %>" <%= project.sector_id == sector.id ? 'selected' : '' %>>
                                <%= sector.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <div class="mb-6">
                    <label for="intro_short" class="block font-medium my-2">Intro</label>
                    <textarea id="intro_short" name="intro_short" required class="w-full rounded-md px-3 py-2 h-40"><%= project.intro_short %></textarea>
                </div>

                <div class="mb-6">
                    <label for="summary_short" class="block font-medium my-2">Short Summary</label>
                    <textarea id="summary_short" name="summary_short" required class="w-full rounded-md px-3 py-2 h-40"><%= project.summary_short %></textarea>
                </div>

                <div class="mb-6">
                    <label for="impact" class="block font-medium my-2">Impact</label>
                    <textarea id="impact" name="impact" required class="w-full rounded-md px-3 py-2 h-40"><%= project.impact %></textarea>
                </div>

                <div class="mb-6">
                    <label for="original_source_url" class="block font-medium my-2">Original Source (URL)</label>
                    <input value="<%= project.original_source_url %>" type="url" id="original_source_url" name="original_source_url" required class="w-full rounded-md px-3 py-2">
                </div>

            </div>

            <div class="mt-6 flex justify-end space-x-2">
                <button type="submit" class="btn btn-primary btn-sm">Update Project</button>
                <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-sm btn-error">Delete Project</a>
                <input type="hidden" value="<%= project.id %>" name="id">
            </div>

        </form>

    </div>

</body>
</html>
